@model AT02_4_GaldonMario_Musica.Models.Album

@{
    ViewData["Title"] = "CreateAlbum";
}

<h1 class="text-light">Crear Album</h1>

<h4 class="text-light">Album</h4>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="CreateAlbum">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Titulo</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Artista</label>
                <select asp-for="ArtistId" class ="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-light">Ir a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
